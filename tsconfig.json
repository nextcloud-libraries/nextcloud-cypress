{
	"extends": "@vue/tsconfig/tsconfig.json",
	"include": ["./lib/**/*.ts"],
	"compilerOptions": {
		"types": ["cypress", "node"],
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		// ES2015 is the latest version supported by cypress (besides CommonJS)
		"target": "ES2015",
		"module": "ES2015",
		"declaration": true,
		"strict": true,
		"noImplicitAny": false,
		"outDir": "./dist"
	},
}
